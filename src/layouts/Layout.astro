---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Professional glass inventory management for glass artists" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900">
    <!-- Header -->
    <header class="bg-slate-900/95 backdrop-blur-sm border-b border-slate-800 sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="flex items-center space-x-2">
            <img src="/logo.png" alt="Molten Logo" class="w-8 h-8" />
            <span class="text-xl font-bold text-orange-400">Molten</span>
          </a>

          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-slate-300 hover:text-orange-400 transition">Home</a>
            <a href="/features" class="text-slate-300 hover:text-orange-400 transition">Features</a>
            <a href="/submit" class="text-slate-300 hover:text-orange-400 transition">Submit to Directory</a>
          </div>

          <a href="https://apps.apple.com/app/molten"
             class="gradient-orange text-white px-4 py-2 rounded-lg font-medium hover:opacity-90 transition">
            Download
          </a>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-slate-950 text-slate-400 py-12 border-t border-slate-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-center items-center gap-6 text-sm">
          <a href="/features" class="hover:text-orange-400 transition">Support</a>
          <span class="hidden md:inline text-slate-600">|</span>
          <a href="/privacy" class="hover:text-orange-400 transition">Privacy Policy</a>
          <span class="hidden md:inline text-slate-600">|</span>
          <a href="/contact" class="hover:text-orange-400 transition">Contact Us</a>
        </div>

        <div class="mt-8 text-sm text-center text-slate-500">
          <p>&copy; {new Date().getFullYear()} Molten Glass App</p>
        </div>
      </div>
    </footer>
  </body>
</html>
