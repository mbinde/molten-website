---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Professional glass inventory management for glass artists" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center space-x-2">
            <img src="/logo.png" alt="Molten Logo" class="w-8 h-8" />
            <span class="text-xl font-bold text-orange-500">Molten</span>
          </div>

          <div class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-700 hover:text-orange-500 transition">Home</a>
            <a href="/features" class="text-gray-700 hover:text-orange-500 transition">Features</a>
            <a href="/import" class="text-gray-700 hover:text-orange-500 transition">Import Tool</a>
          </div>

          <a href="https://apps.apple.com/app/molten"
             class="gradient-orange text-white px-4 py-2 rounded-lg font-medium hover:opacity-90 transition">
            Download
          </a>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 py-12 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <img src="/logo.png" alt="Molten Logo" class="w-8 h-8" />
              <span class="text-xl font-bold text-white">Molten</span>
            </div>
            <p class="text-sm">
              Professional glass inventory management for glass artists.
            </p>
          </div>

          <div>
            <h3 class="font-semibold text-white mb-4">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/features" class="hover:text-orange-400 transition">Features</a></li>
              <li><a href="/import" class="hover:text-orange-400 transition">Import Tool</a></li>
              <li><a href="/privacy" class="hover:text-orange-400 transition">Privacy Policy</a></li>
            </ul>
          </div>

          <div>
            <h3 class="font-semibold text-white mb-4">Contact</h3>
            <p class="text-sm">
              Questions or feedback?<br/>
              <a href="mailto:info@moltenglass.app" class="text-orange-400 hover:text-orange-300 transition">
                info@moltenglass.app
              </a>
            </p>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-8 pt-8 text-sm text-center">
          <p>&copy; {new Date().getFullYear()} Molten. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
