---
import Layout from '../layouts/Layout.astro';

export const prerender = true;
---

<Layout title="Molten - Professional Glass Inventory Management for iOS">
  <!-- Hero Section -->
  <section class="hero-section">
    <!-- Background Image -->
    <div class="hero-bg">
      <img src="/furnace.png" alt="Glassblowing furnace" />
    </div>
    <div class="hero-overlay"></div>

    <!-- Hero Content -->
    <div class="hero-content max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left: Text Content -->
        <div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            <span class="text-orange-400">Molten:</span><br />
            Everything except the heat
          </h1>
          <p class="text-xl md:text-2xl text-slate-300 mb-8">
            The complete inventory management app for glass artists. Track materials, plan shopping, and organize your studio from any device.
          </p>
          <a href="https://apps.apple.com/us/app/molten-glass/id6754231339" class="btn-app-store text-lg">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            Download on the App Store
          </a>
        </div>

        <!-- Right: Phone Mockup with rotation -->
        <div class="flex justify-center lg:justify-end">
          <div class="relative">
            <img
              id="hero-phone-1"
              src="/blue-flambe.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img"
            />
            <img
              id="hero-phone-2"
              src="/maleficent-flake-holographic.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-3"
              src="/autumn-orange.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-4"
              src="/atlas-2.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-5"
              src="/green-petroleum-filigrana.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-6"
              src="/unicorn-tears.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-7"
              src="/transitional-rose-quartz.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-8"
              src="/black-iridescent-opalescent-oceanside.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-9"
              src="/yellow-a.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
            <img
              id="hero-phone-10"
              src="/agate.png"
              alt="Molten app showing glass detail"
              class="phone-mockup hero-phone-img absolute top-0 left-0 opacity-0"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Trust Bar -->
    <div class="trust-bar absolute bottom-0 left-0 right-0 py-6">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <div class="flex items-center justify-center gap-3">
            <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
            <span class="text-slate-200 font-medium">3,000+ Colors & Coatings</span>
          </div>
          <div class="flex items-center justify-center gap-3">
            <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <span class="text-slate-200 font-medium">20+ Major Manufacturers</span>
          </div>
          <div class="flex items-center justify-center gap-3">
            <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
            </svg>
            <span class="text-slate-200 font-medium">iCloud Sync Across Devices</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Feature 1: Comprehensive Catalog -->
        <div class="flex flex-col">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Comprehensive<br />Catalog
          </h2>
          <p class="text-lg text-slate-400 mb-8">
            Browse over 3,000 glass colors with detailed product info.
          </p>
          <div class="flex-1 flex items-center justify-center">
            <img
              src="/hero-catalog-browse.png"
              alt="Browse glass catalog showing various colors and manufacturers"
              class="rounded-2xl shadow-2xl max-w-full"
              style="max-height: 500px;"
            />
          </div>
        </div>

        <!-- Feature 2: Smart Inventory & QR Labels -->
        <div class="flex flex-col">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Smart Inventory &<br />QR Labels
          </h2>
          <p class="text-lg text-slate-400 mb-8">
            Organize your studio with scannable QR codes for instant updates.
          </p>
          <div class="flex-1 flex items-center justify-center">
            <img
              src="/qr-scan.png"
              alt="Scanning QR code on glass jar with Molten app"
              class="rounded-2xl shadow-2xl max-w-full"
              style="max-height: 500px;"
            />
          </div>
        </div>
      </div>
    </div>

  </section>

  <style>
    .hero-phone-img {
      transition: opacity 1s ease-in-out;
    }
  </style>

  <script>
    (function() {
      const images = [
        document.getElementById('hero-phone-1'),
        document.getElementById('hero-phone-2'),
        document.getElementById('hero-phone-3'),
        document.getElementById('hero-phone-4'),
        document.getElementById('hero-phone-5'),
        document.getElementById('hero-phone-6'),
        document.getElementById('hero-phone-7'),
        document.getElementById('hero-phone-8'),
        document.getElementById('hero-phone-9'),
        document.getElementById('hero-phone-10')
      ];

      // Shuffle array randomly on page load
      for (let i = images.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [images[i], images[j]] = [images[j], images[i]];
      }

      // Show first random image, hide others
      images.forEach((img, i) => {
        img.style.opacity = i === 0 ? '1' : '0';
      });

      let current = 0;

      setInterval(() => {
        const next = (current + 1) % images.length;
        images[current].style.opacity = '0';
        images[next].style.opacity = '1';
        current = next;
      }, 5000);
    })();
  </script>

  <!-- CTA / Footer Section -->
  <section class="py-24 bg-dark-primary">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-12">
        Ready to organize your studio?
      </h2>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="https://apps.apple.com/us/app/molten-glass/id6754231339" class="btn-app-store text-lg px-8 py-4">
          <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          Download on the App Store
        </a>
        <a href="/features" class="text-slate-400 hover:text-orange-400 transition text-lg">
          Learn more â†’
        </a>
      </div>
    </div>
  </section>
</Layout>
