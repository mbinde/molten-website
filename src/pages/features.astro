---

<Layout title="Features - Molten Glass Inventory Management">
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img src="/hero-bg.png" alt="" class="w-full h-full object-cover object-right" />
    </div>
    <!-- Gradient Overlay -->
