  <!-- Privacy First -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-6">Your creative work stays private.</h2>
      <p class="text-lg text-slate-400 mb-12">
        We don't track you or sell your data. All data is stored locally or in your personal iCloud account.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-slate-700/50 rounded-xl p-6">
          <div class="text-3xl mb-4">üì±</div>
          <h3 class="text-xl font-semibold mb-2">Local Storage</h3>
          <p class="text-slate-400">Everything stays on your device</p>
        </div>
        <div class="bg-slate-700/50 rounded-xl p-6">
          <div class="text-3xl mb-4">‚òÅÔ∏è</div>
          <h3 class="text-xl font-semibold mb-2">iCloud Sync</h3>
          <p class="text-slate-400">Syncs to your devices only</p>
        </div>
        <div class="bg-slate-700/50 rounded-xl p-6">
