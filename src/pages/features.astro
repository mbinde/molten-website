  <style>
    .catalog-rotate-img,
    .sharing-rotate-img {
      transition: opacity 1s ease-in-out;
    }
  </style>

  <script>
    (function() {
      // Catalog rotation (randomized)
      const catalogImages = [
        document.getElementById('catalog-detail-1'),
        document.getElementById('catalog-detail-2'),
        document.getElementById('catalog-detail-3'),
        document.getElementById('catalog-detail-4'),
        document.getElementById('catalog-detail-5'),
        document.getElementById('catalog-detail-6'),
        document.getElementById('catalog-detail-7'),
        document.getElementById('catalog-detail-8'),
        document.getElementById('catalog-detail-9')
      ];

      // Shuffle catalog array randomly on page load
      for (let i = catalogImages.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [catalogImages[i], catalogImages[j]] = [catalogImages[j], catalogImages[i]];
      }

      // Show first random image, hide others
      catalogImages.forEach((img, i) => {
        if (img) img.style.opacity = i === 0 ? '1' : '0';
      });

      let catalogCurrent = 0;
      setInterval(() => {
        const next = (catalogCurrent + 1) % catalogImages.length;
        if (catalogImages[catalogCurrent]) catalogImages[catalogCurrent].style.opacity = '0';
        if (catalogImages[next]) catalogImages[next].style.opacity = '1';
        catalogCurrent = next;
      }, 5000);

      // Sharing rotation (sequential, not randomized)
      const sharingImages = [
        document.getElementById('sharing-1'),
        document.getElementById('sharing-2'),
        document.getElementById('sharing-3')
      ];

      let sharingCurrent = 0;
      setInterval(() => {
        const next = (sharingCurrent + 1) % sharingImages.length;
        if (sharingImages[sharingCurrent]) sharingImages[sharingCurrent].style.opacity = '0';
        if (sharingImages[next]) sharingImages[next].style.opacity = '1';
        sharingCurrent = next;
      }, 5000);
    })();
  </script>
