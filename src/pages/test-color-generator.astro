        function addColorRow(hex = '#4A90E2', weight = '') {
            const container = document.getElementById('colorInputs');
            const row = document.createElement('div');
            row.className = 'color-row';

            row.innerHTML = `
                <input type="color" class="color-preview" value="${hex}">
                <input type="text" class="hex-input" placeholder="#RRGGBB" value="${hex}" pattern="^#[0-9A-Fa-f]{6}$">
                <input type="number" class="weight-input" placeholder="Weight" value="${weight}" min="0" max="1" step="0.1">
                <button class="btn btn-remove">Ã—</button>
            `;

            // Add event listeners
            const colorPreview = row.querySelector('.color-preview');
            const hexInput = row.querySelector('.hex-input');
            const removeBtn = row.querySelector('.btn-remove');

            colorPreview.addEventListener('change', () => {
                hexInput.value = colorPreview.value.toUpperCase();
            });

            hexInput.addEventListener('change', () => {
                if (/^#[0-9A-Fa-f]{6}$/.test(hexInput.value)) {
                    colorPreview.value = hexInput.value;
                }
            });

            removeBtn.addEventListener('click', () => {
                row.remove();
            });

            container.appendChild(row);
        }

        function loadPreset(presetName) {
            const preset = presets[presetName];

            // Clear existing colors
            document.getElementById('colorInputs').innerHTML = '';

            // Add preset colors
            preset.colors.forEach(color => {
                addColorRow(color.hex, color.weight);
            });

            // Don't change style keywords - let user keep their own
        }

        function hexToRgb(hex) {
            const result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
            return result ? {
                r: parseInt(result[1], 16),
                g: parseInt(result[2], 16),
                b: parseInt(result[3], 16)
            } : null;
        }

        async function checkIfBlackImage(blob) {
            return new Promise((resolve) => {
                const img = new Image();
                img.onload = () => {
                    const canvas = document.createElement('canvas');
                    canvas.width = img.width;
                    canvas.height = img.height;
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0);

                    // Sample a few pixels to check if image is all black
                    const imageData = ctx.getImageData(0, 0, img.width, img.height);
                    const data = imageData.data;

                    let totalBrightness = 0;
                    const sampleCount = Math.min(1000, data.length / 4); // Sample up to 1000 pixels

                    for (let i = 0; i < sampleCount; i++) {
                        const idx = i * 4 * Math.floor(data.length / (sampleCount * 4));
                        const r = data[idx];
                        const g = data[idx + 1];
                        const b = data[idx + 2];
                        totalBrightness += (r + g + b) / 3;
                    }

                    const avgBrightness = totalBrightness / sampleCount;

                    // If average brightness is very low (<5), image is essentially black
                    const isBlack = avgBrightness < 5;
                    console.log('Image brightness check:', avgBrightness, 'isBlack:', isBlack);

                    URL.revokeObjectURL(img.src);
                    resolve(isBlack);
                };
                img.onerror = () => resolve(false);
                img.src = URL.createObjectURL(blob);
            });
        }

        async function generateImage() {
            const btn = document.getElementById('generateBtn');
            const result = document.getElementById('result');
            const generatedInfo = document.getElementById('generatedInfo');

            // Collect colors
            const hexInputs = document.querySelectorAll('.hex-input');
            const weightInputs = document.querySelectorAll('.weight-input');

            const colors = [];
            hexInputs.forEach((input, index) => {
                const hex = input.value.trim();
                if (hex && /^#[0-9A-Fa-f]{6}$/.test(hex)) {
                    const weight = parseFloat(weightInputs[index].value) || undefined;
                    colors.push({ hex, weight });
                }
            });

            if (colors.length === 0) {
                result.innerHTML = '<p class="error">Please add at least one valid hex color</p>';
                return;
            }

            // Collect style keywords
            const styleText = document.getElementById('styleKeywords').value;
            const style = styleText.split(',').map(s => s.trim()).filter(s => s);

            // Show loading
            btn.disabled = true;
            btn.textContent = 'Generating...';
            result.innerHTML = '<div class="loading"><div class="spinner"></div><p>Generating your image...<br>This may take 5-10 seconds</p></div>';
            generatedInfo.style.display = 'none';

            try {
                console.log('Sending request with:', { colors, style });

                const response = await fetch('/api/v1/generate-color-image', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        colors,
                        style,
                        width: 384,
                        height: 128
                    })
                });

                console.log('Response status:', response.status);
                console.log('Response headers:', Object.fromEntries(response.headers.entries()));

                if (!response.ok) {
                    const contentType = response.headers.get('content-type');
                    let errorMessage = 'Failed to generate image';

                    if (contentType && contentType.includes('application/json')) {
                        const error = await response.json();
                        errorMessage = error.error || errorMessage;
                        if (error.details) {
                            errorMessage += ': ' + error.details;
                        }
                        if (error.hint) {
                            errorMessage += ' (Hint: ' + error.hint + ')';
                        }
                        console.error('API error:', error);
                    } else {
                        const text = await response.text();
                        errorMessage += ': ' + text;
                        console.error('API error (text):', text);
                    }

                    throw new Error(errorMessage);
                }

                // Get the generated prompt from headers
                const generatedPrompt = response.headers.get('X-Generated-Prompt');
                console.log('Generated prompt:', generatedPrompt);

                // Convert response to blob and create image URL
                const blob = await response.blob();

                // Check if image is all black (generation failed)
                const isBlackImage = await checkIfBlackImage(blob);

                // Check if user's palette is intentionally dark
                const isDarkPalette = colors.every(color => {
                    const rgb = hexToRgb(color.hex);
                    if (!rgb) return false;
                    const brightness = (rgb.r + rgb.g + rgb.b) / 3;
                    return brightness < 50; // All colors are dark
                });

                if (isBlackImage && !isDarkPalette) {
                    console.warn('Got black image with non-dark palette, retrying once...');
                    result.innerHTML = '<div class="loading"><div class="spinner"></div><p>Generation failed (black image), retrying...</p></div>';

                    // Retry once
                    const retryResponse = await fetch('/api/v1/generate-color-image', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            colors,
                            style,
                            width: 384,
                            height: 128
                        })
                    });

                    if (retryResponse.ok) {
                        const retryBlob = await retryResponse.blob();
                        const retryIsBlack = await checkIfBlackImage(retryBlob);

                        if (retryIsBlack) {
                            throw new Error('Generation failed twice (black images). This usually means the AI model encountered an error. Try different colors or style keywords.');
                        }

                        const imageUrl = URL.createObjectURL(retryBlob);
                        result.innerHTML = `<img src="${imageUrl}" alt="Generated image">`;

                        const retryPrompt = retryResponse.headers.get('X-Generated-Prompt');
                        if (retryPrompt) {
                            document.getElementById('promptText').textContent = retryPrompt + ' (retried)';
                            generatedInfo.style.display = 'block';
                        }
                    } else {
                        throw new Error('Retry request failed');
                    }
                } else {
                    // Success on first try
                    const imageUrl = URL.createObjectURL(blob);
                    result.innerHTML = `<img src="${imageUrl}" alt="Generated image">`;

                    // Show generated prompt
                    if (generatedPrompt) {
                        document.getElementById('promptText').textContent = generatedPrompt;
                        generatedInfo.style.display = 'block';
                    }
                }

            } catch (error) {
                console.error('Generation error:', error);
                result.innerHTML = `<p class="error">Error: ${error.message}<br><br>Check the browser console for more details.</p>`;
            } finally {
                btn.disabled = false;
                btn.textContent = 'Generate Image';
            }
        }

        function randomizeWeights() {
            const weightInputs = document.querySelectorAll('.weight-input');

            if (weightInputs.length === 0) {
                return;
            }

            // Generate random weights
            const randomWeights = [];
            for (let i = 0; i < weightInputs.length; i++) {
                randomWeights.push(Math.random());
            }

            // Normalize to sum to 1
            const sum = randomWeights.reduce((a, b) => a + b, 0);
            const normalizedWeights = randomWeights.map(w => w / sum);

            // Apply to inputs (rounded to 2 decimal places)
            weightInputs.forEach((input, index) => {
                input.value = normalizedWeights[index].toFixed(2);
            });
        }

        // Initialize with modern preset
        loadPreset('modern');

        // Attach event listeners after DOM is ready
        document.getElementById('addColorBtn').addEventListener('click', () => addColorRow());
        document.getElementById('randomizeBtn').addEventListener('click', () => randomizeWeights());
        document.getElementById('generateBtn').addEventListener('click', () => generateImage());

        // Preset buttons
        document.querySelectorAll('.preset-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const preset = btn.getAttribute('data-preset');
                loadPreset(preset);
            });
        });
    </script>
