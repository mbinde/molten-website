<script>
  const TOKEN_KEY = 'molten_admin_token';
  let currentFilter = 'pending';
  let submissions = [];
  let editSuggestions = [];
  let authToken = null;

  // Elements
  const loginGate = document.getElementById('loginGate');
  const adminContent = document.getElementById('adminContent');
  const loginForm = document.getElementById('loginForm');
  const loginButton = document.getElementById('loginButton');
  const loginError = document.getElementById('loginError');

  // Check for existing token on page load
  function checkExistingAuth() {
    const stored = localStorage.getItem(TOKEN_KEY);
    if (stored) {
      authToken = stored;
      showAdminInterface();
    }
  }

  // Handle login form submission
  loginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const password = document.getElementById('passwordInput').value;
    loginButton.disabled = true;
    loginButton.textContent = 'Logging in...';
    loginError.classList.add('hidden');

    try {
      const response = await fetch('/api/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ password })
      });

      const result = await response.json();

      if (response.ok && result.token) {
        // Store token
        authToken = result.token;
        localStorage.setItem(TOKEN_KEY, authToken);

        // Show admin interface
        showAdminInterface();
      } else {
        // Show error
        loginError.textContent = result.error || 'Invalid password';
        loginError.classList.remove('hidden');
      }
    } catch (error) {
      loginError.textContent = 'Network error. Please try again.';
      loginError.classList.remove('hidden');
    } finally {
      loginButton.disabled = false;
      loginButton.textContent = 'Login';
    }
  });

  function showAdminInterface() {
    loginGate.classList.add('hidden');
    adminContent.classList.remove('hidden');
    loadSubmissions();
    loadEditSuggestions();
  }

  function logout() {
    localStorage.removeItem(TOKEN_KEY);
    authToken = null;
    adminContent.classList.add('hidden');
    loginGate.classList.remove('hidden');
    loginError.classList.add('hidden');
    document.getElementById('passwordInput').value = '';
  }

  // Helper: Make authenticated API request
  async function authenticatedFetch(url, options = {}) {
    if (!authToken) {
      throw new Error('Not authenticated');
    }

    const headers = {
      ...options.headers,
      'Authorization': `Bearer ${authToken}`,
      'Content-Type': 'application/json'
    };

    const response = await fetch(url, { ...options, headers });

    // If 401, token expired - logout
    if (response.status === 401) {
      alert('Session expired. Please log in again.');
      logout();
      throw new Error('Unauthorized');
    }

    return response;
  }

  // Regenerate JSON function
  window.regenerateJSON = async function() {
    const btn = document.getElementById('regenerateBtn');
    const status = document.getElementById('regenerateStatus');

    btn.disabled = true;
    btn.textContent = 'Regenerating...';
    status.classList.remove('hidden');
    status.className = 'mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg text-sm text-blue-800';
    status.textContent = '‚è≥ Regenerating locations.json...';

    try {
      const response = await authenticatedFetch('/api/generate-locations', {
        method: 'POST'
      });

      const data = await response.json();

      if (response.ok) {
        status.className = 'mt-4 p-3 bg-green-50 border border-green-200 rounded-lg text-sm';
        status.innerHTML = `
          <div class="text-green-800 font-semibold">‚úÖ Success!</div>
          <div class="text-green-700 mt-1">${data.message}</div>
          <div class="text-green-600 text-xs mt-1">
            Count: ${data.count} locations | Verified: ${data.verified ? 'Yes' : 'No'}
          </div>
          <a href="/locations.json" target="_blank" class="text-green-600 underline mt-2 inline-block">
            View locations.json ‚Üí
          </a>
        `;
        btn.textContent = 'üîÑ Regenerate JSON';
        btn.disabled = false;

        // Auto-hide after 8 seconds
        setTimeout(() => {
          status.classList.add('hidden');
        }, 8000);
      } else {
        status.className = 'mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-800';
        status.textContent = `‚ùå Error: ${data.error || 'Failed to regenerate JSON'}`;
        btn.textContent = 'üîÑ Regenerate JSON';
        btn.disabled = false;
      }
    } catch (error) {
      console.error('Regeneration error:', error);
      status.className = 'mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-800';
      status.textContent = `‚ùå Network error: ${error instanceof Error ? error.message : 'Unknown error'}`;
      btn.textContent = 'üîÑ Regenerate JSON';
      btn.disabled = false;
    }
  };

  // Check auth on page load
  checkExistingAuth();

  // Load submissions
  async function loadSubmissions() {
    try {
      const response = await authenticatedFetch('/api/list-locations');
      const data = await response.json();
      submissions = data.submissions || [];

      updateStats();
      renderSubmissions();
    } catch (error) {
      console.error('Error loading submissions:', error);
      document.getElementById('loadingState').innerHTML =
        '<div class="text-red-500">Error loading submissions</div>';
    }
  }

  // Load edit suggestions
  async function loadEditSuggestions() {
    try {
      const response = await authenticatedFetch('/api/list-edit-suggestions');
      editSuggestions = await response.json();

      updateStats();
      if (currentFilter === 'edit-suggestions') {
        renderSubmissions();
      }
    } catch (error) {
      console.error('Error loading edit suggestions:', error);
    }
  }

  // Update statistics
  function updateStats() {
    const pending = submissions.filter(s => s.status === 'pending').length;
    const approved = submissions.filter(s => s.status === 'approved').length;
    const rejected = submissions.filter(s => s.status === 'rejected').length;

    document.getElementById('pendingCount').textContent = pending;
    document.getElementById('editSuggestionsCount').textContent = editSuggestions.length;
    document.getElementById('approvedCount').textContent = approved;
    document.getElementById('rejectedCount').textContent = rejected;
  }

  // Render submissions
  function renderSubmissions() {
    // Handle edit suggestions separately
    if (currentFilter === 'edit-suggestions') {
      renderEditSuggestions();
      return;
    }

    const filtered = submissions.filter(s => s.status === currentFilter);

    const loadingState = document.getElementById('loadingState');
    const emptyState = document.getElementById('emptyState');
    const submissionsList = document.getElementById('submissionsList');

    loadingState.classList.add('hidden');

    if (filtered.length === 0) {
      emptyState.classList.remove('hidden');
      submissionsList.innerHTML = '';
      return;
    }

    emptyState.classList.add('hidden');

    submissionsList.innerHTML = filtered.map(store => `
      <div class="bg-white rounded-lg shadow-lg p-6" data-id="${store.stable_id}">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-2xl font-bold">${store.name}</h3>
            ${store.website_url ? `
              <div class="text-sm mt-1">
                <a href="${store.website_url}" target="_blank" class="text-orange-500 hover:underline inline-flex items-center gap-1">
                  ${store.website_url}
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>
            ` : ''}
            <div class="text-sm text-gray-500 mt-1">ID: ${store.stable_id}</div>
            <div class="text-sm text-gray-500">Submitted: ${new Date(store.submitted_at).toLocaleString()}</div>
          </div>
          <span class="px-3 py-1 rounded-full text-sm font-medium ${
            store.status === 'pending' ? 'bg-orange-100 text-orange-800' :
            store.status === 'approved' ? 'bg-green-100 text-green-800' :
            'bg-gray-100 text-gray-800'
          }">
            ${store.status.charAt(0).toUpperCase() + store.status.slice(1)}
          </span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <div class="font-semibold text-gray-700 mb-1">Address</div>
            <div class="text-gray-600">
              ${store.address_line1}<br>
              ${store.address_line2 ? store.address_line2 + '<br>' : ''}
              ${store.city}, ${store.state} ${store.zip}
            </div>
          </div>

          <div>
            ${store.phone ? `
              <div class="mb-2">
                <div class="font-semibold text-gray-700">Phone</div>
                <div class="text-gray-600">${store.phone}</div>
              </div>
            ` : ''}

            ${store.website_url ? `
              <div class="mb-2">
                <div class="font-semibold text-gray-700">Website</div>
                <div class="text-gray-600">
                  <a href="${store.website_url}" target="_blank" class="text-orange-500 hover:underline">
                    ${store.website_url}
                  </a>
                </div>
              </div>
            ` : ''}
          </div>
        </div>

        ${store.notes ? `
          <div class="mb-4">
            <div class="font-semibold text-gray-700 mb-1">Notes</div>
            <div class="text-gray-600">${store.notes}</div>
          </div>
        ` : ''}

        ${store.submitter ? `
          <div class="mb-4 p-3 bg-gray-50 rounded">
            <div class="font-semibold text-gray-700 mb-1">Submitter Info</div>
            <div class="text-sm text-gray-600">
              ${store.submitter.name ? `Name: ${store.submitter.name}<br>` : ''}
              ${store.submitter.email ? `Email: ${store.submitter.email}` : ''}
            </div>
          </div>
        ` : ''}

        <div class="flex gap-3 pt-4 border-t">
          ${store.status === 'pending' ? `
            <button
              onclick="approveStore('${store.stable_id}')"
              class="flex-1 bg-green-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-green-600 transition"
            >
              ‚úì Approve
            </button>
            <button
              onclick="rejectStore('${store.stable_id}')"
              class="flex-1 bg-red-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-red-600 transition"
            >
              ‚úó Reject
            </button>
          ` : ''}
          ${store.status === 'rejected' ? `
            <button
              onclick="moveToPending('${store.stable_id}')"
              class="flex-1 bg-orange-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-orange-600 transition"
            >
              ‚Üª Move to Pending
            </button>
          ` : ''}
          <button
            onclick="openEditModal('${store.stable_id}')"
            class="flex-1 bg-blue-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-blue-600 transition"
          >
            ‚úé Edit
          </button>
        </div>
      </div>
    `).join('');
  }

  // Stat box click handlers (filter by clicking on stats)
  document.querySelectorAll('.stat-box').forEach(box => {
    box.addEventListener('click', () => {
      currentFilter = box.dataset.filter;

      // Update stat box visual states - add colored border to active, remove from others
      document.querySelectorAll('.stat-box').forEach(b => {
        b.classList.remove('border-orange-500', 'border-blue-500', 'border-green-500', 'border-gray-500');
        b.classList.add('border-transparent');
      });

      // Add appropriate colored border to the active box
      const filter = box.dataset.filter;
      if (filter === 'pending') {
        box.classList.remove('border-transparent');
        box.classList.add('border-orange-500');
      } else if (filter === 'edit-suggestions') {
        box.classList.remove('border-transparent');
        box.classList.add('border-blue-500');
      } else if (filter === 'approved') {
        box.classList.remove('border-transparent');
        box.classList.add('border-green-500');
      } else if (filter === 'rejected') {
        box.classList.remove('border-transparent');
        box.classList.add('border-gray-500');
      }

      renderSubmissions();
    });
  });

  // Render edit suggestions
  function renderEditSuggestions() {
    const loadingState = document.getElementById('loadingState');
    const emptyState = document.getElementById('emptyState');
    const submissionsList = document.getElementById('submissionsList');

    loadingState.classList.add('hidden');

    if (editSuggestions.length === 0) {
      emptyState.classList.remove('hidden');
      submissionsList.innerHTML = '';
      return;
    }

    emptyState.classList.add('hidden');

    submissionsList.innerHTML = editSuggestions.map(suggestion => `
      <div class="bg-white rounded-lg shadow-lg p-6 border-l-4 border-blue-500" data-id="${suggestion.id}">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h3 class="text-2xl font-bold">${suggestion.suggested_changes.name}</h3>
            <div class="text-sm text-gray-500 mt-1">Original: ${suggestion.original_name}</div>
            <div class="text-sm text-gray-500">Store ID: ${suggestion.store_stable_id}</div>
            <div class="text-sm text-gray-500">Submitted: ${new Date(suggestion.submitted_at).toLocaleString()}</div>
          </div>
          <span class="px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            Edit Suggestion
          </span>
        </div>

        <div class="mb-4 p-4 bg-yellow-50 border border-yellow-200 rounded">
          <div class="font-semibold text-gray-700 mb-1">Reason for Edit</div>
          <div class="text-gray-700">${suggestion.edit_reason}</div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
          <div>
            <div class="font-semibold text-gray-700 mb-1">Address</div>
            <div class="text-gray-600">
              ${suggestion.suggested_changes.address_line1 || ''}<br>
              ${suggestion.suggested_changes.address_line2 ? suggestion.suggested_changes.address_line2 + '<br>' : ''}
              ${suggestion.suggested_changes.city}, ${suggestion.suggested_changes.state} ${suggestion.suggested_changes.zip}
            </div>
          </div>

          <div>
            ${suggestion.suggested_changes.phone ? `
              <div class="mb-2">
                <div class="font-semibold text-gray-700">Phone</div>
                <div class="text-gray-600">${suggestion.suggested_changes.phone}</div>
              </div>
            ` : ''}

            ${suggestion.suggested_changes.website_url ? `
              <div class="mb-2">
                <div class="font-semibold text-gray-700">Website</div>
                <div class="text-gray-600">
                  <a href="${suggestion.suggested_changes.website_url}" target="_blank" class="text-orange-500 hover:underline inline-flex items-center gap-1">
                    ${suggestion.suggested_changes.website_url}
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </a>
                </div>
              </div>
            ` : ''}
          </div>
        </div>

        ${suggestion.suggested_changes.notes ? `
          <div class="mb-4">
            <div class="font-semibold text-gray-700 mb-1">Notes</div>
            <div class="text-gray-600">${suggestion.suggested_changes.notes}</div>
          </div>
        ` : ''}

        ${suggestion.submitter_name || suggestion.submitter_email ? `
          <div class="mb-4 p-3 bg-gray-50 rounded">
            <div class="font-semibold text-gray-700 mb-1">Submitter Info</div>
            <div class="text-sm text-gray-600">
              ${suggestion.submitter_name ? `Name: ${suggestion.submitter_name}<br>` : ''}
              ${suggestion.submitter_email ? `Email: ${suggestion.submitter_email}` : ''}
            </div>
          </div>
        ` : ''}

        <div class="flex gap-3 pt-4 border-t">
          <button
            onclick="approveEditSuggestion('${suggestion.id}')"
            class="flex-1 bg-green-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-green-600 transition"
          >
            ‚úì Apply Changes
          </button>
          <button
            onclick="rejectEditSuggestion('${suggestion.id}')"
            class="flex-1 bg-red-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-red-600 transition"
          >
            ‚úó Reject
          </button>
        </div>
      </div>
    `).join('');
  }

  // Approve/Reject actions (global scope for onclick)
  window.approveStore = async function(stableId) {

    try {
      const response = await authenticatedFetch('/api/approve-location', {
        method: 'POST',
        body: JSON.stringify({ stable_id: stableId })
      });

      if (response.ok) {
        await loadSubmissions();
      } else {
        const error = await response.json();
        alert('Error: ' + (error.error || 'Failed to approve store'));
      }
    } catch (error) {
      if (error.message !== 'Unauthorized') {
        alert('Network error. Please try again.');
      }
    }
  };

  window.rejectStore = async function(stableId) {

    try {
      const response = await authenticatedFetch('/api/reject-location', {
        method: 'POST',
        body: JSON.stringify({ stable_id: stableId })
      });

      if (response.ok) {
        await loadSubmissions();
      } else {
        const error = await response.json();
        alert('Error: ' + (error.error || 'Failed to reject store'));
      }
    } catch (error) {
      if (error.message !== 'Unauthorized') {
        alert('Network error. Please try again.');
      }
    }
  };

  window.moveToPending = async function(stableId) {
    try {
      // Use the update-location API to change status back to pending
      const response = await authenticatedFetch('/api/update-location', {
        method: 'POST',
        body: JSON.stringify({
          stable_id: stableId,
          updates: { status: 'pending' }
        })
      });

      if (response.ok) {
        await loadSubmissions();
      } else {
        const error = await response.json();
        alert('Error: ' + (error.error || 'Failed to move location to pending'));
      }
    } catch (error) {
      if (error.message !== 'Unauthorized') {
        alert('Network error. Please try again.');
      }
    }
  };

  // Edit suggestion actions
  window.approveEditSuggestion = async function(suggestionId) {
    try {
      const response = await authenticatedFetch('/api/handle-edit-suggestion', {
        method: 'POST',
        body: JSON.stringify({ action: 'approve', suggestionId })
      });

      if (response.ok) {
        await loadEditSuggestions();
      } else {
        const error = await response.json();
        alert('Error: ' + (error.error || 'Failed to approve edit suggestion'));
      }
    } catch (error) {
      if (error.message !== 'Unauthorized') {
        alert('Network error. Please try again.');
      }
    }
  };

  window.rejectEditSuggestion = async function(suggestionId) {
    try {
      const response = await authenticatedFetch('/api/handle-edit-suggestion', {
        method: 'POST',
        body: JSON.stringify({ action: 'reject', suggestionId })
      });

      if (response.ok) {
        await loadEditSuggestions();
      } else {
        const error = await response.json();
        alert('Error: ' + (error.error || 'Failed to reject edit suggestion'));
      }
    } catch (error) {
      if (error.message !== 'Unauthorized') {
        alert('Network error. Please try again.');
      }
    }
  };

  // Edit modal functions
  const editModal = document.getElementById('editModal');
  const editForm = document.getElementById('editForm');
  const editError = document.getElementById('editError');

  window.openEditModal = function(stableId) {
    const store = submissions.find(s => s.stable_id === stableId);
    if (!store) return;

    // Populate form fields
    document.getElementById('edit_stable_id').value = store.stable_id;
    document.getElementById('edit_name').value = store.name;
    document.getElementById('edit_address_line1').value = store.address_line1;
    document.getElementById('edit_address_line2').value = store.address_line2 || '';
    document.getElementById('edit_city').value = store.city;
    document.getElementById('edit_state').value = store.state;
    document.getElementById('edit_zip').value = store.zip;
    document.getElementById('edit_country').value = store.country || '';
    document.getElementById('edit_phone').value = store.phone || '';
    document.getElementById('edit_website_url').value = store.website_url || '';
    document.getElementById('edit_retail_url').value = store.retail_url || '';
    document.getElementById('edit_classes_url').value = store.classes_url || '';
    document.getElementById('edit_rentals_url').value = store.rentals_url || '';
    document.getElementById('edit_notes').value = store.notes || '';
    document.getElementById('edit_latitude').value = store.latitude || '';
    document.getElementById('edit_longitude').value = store.longitude || '';

    // Populate retail technique checkboxes
    document.getElementById('edit_retail_supports_casting').checked = store.retail_supports_casting || false;
    document.getElementById('edit_retail_supports_flameworking_hard').checked = store.retail_supports_flameworking_hard || false;
    document.getElementById('edit_retail_supports_flameworking_soft').checked = store.retail_supports_flameworking_soft || false;
    document.getElementById('edit_retail_supports_fusing').checked = store.retail_supports_fusing || false;
    document.getElementById('edit_retail_supports_glass_blowing').checked = store.retail_supports_glass_blowing || false;
    document.getElementById('edit_retail_supports_stained_glass').checked = store.retail_supports_stained_glass || false;
    document.getElementById('edit_retail_supports_other').checked = store.retail_supports_other || false;

    // Populate classes technique checkboxes
    document.getElementById('edit_classes_supports_casting').checked = store.classes_supports_casting || false;
    document.getElementById('edit_classes_supports_flameworking_hard').checked = store.classes_supports_flameworking_hard || false;
    document.getElementById('edit_classes_supports_flameworking_soft').checked = store.classes_supports_flameworking_soft || false;
    document.getElementById('edit_classes_supports_fusing').checked = store.classes_supports_fusing || false;
    document.getElementById('edit_classes_supports_glass_blowing').checked = store.classes_supports_glass_blowing || false;
    document.getElementById('edit_classes_supports_stained_glass').checked = store.classes_supports_stained_glass || false;
    document.getElementById('edit_classes_supports_other').checked = store.classes_supports_other || false;

    // Populate rentals technique checkboxes
    document.getElementById('edit_rentals_supports_casting').checked = store.rentals_supports_casting || false;
    document.getElementById('edit_rentals_supports_flameworking_hard').checked = store.rentals_supports_flameworking_hard || false;
    document.getElementById('edit_rentals_supports_flameworking_soft').checked = store.rentals_supports_flameworking_soft || false;
    document.getElementById('edit_rentals_supports_fusing').checked = store.rentals_supports_fusing || false;
    document.getElementById('edit_rentals_supports_glass_blowing').checked = store.rentals_supports_glass_blowing || false;
    document.getElementById('edit_rentals_supports_stained_glass').checked = store.rentals_supports_stained_glass || false;
    document.getElementById('edit_rentals_supports_other').checked = store.rentals_supports_other || false;

    // Show clickable current website URL
    const websiteDisplay = document.getElementById('currentWebsiteDisplay');
    const websiteLink = document.getElementById('currentWebsiteLink');
    const websiteText = document.getElementById('currentWebsiteText');

    if (store.website_url) {
      websiteLink.href = store.website_url;
      websiteText.textContent = store.website_url;
      websiteDisplay.classList.remove('hidden');
    } else {
      websiteDisplay.classList.add('hidden');
    }

    // Show modal
    editModal.classList.remove('hidden');
    editError.classList.add('hidden');
  };

  window.closeEditModal = function() {
    editModal.classList.add('hidden');
    editForm.reset();
    editError.classList.add('hidden');
  };

  // Handle edit form submission
  editForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const stableId = document.getElementById('edit_stable_id').value;
    const saveButton = document.getElementById('saveEditButton');

    saveButton.disabled = true;
    saveButton.textContent = 'Saving...';
    editError.classList.add('hidden');

    try {
      const updates = {
        name: document.getElementById('edit_name').value,
        address_line1: document.getElementById('edit_address_line1').value,
        address_line2: document.getElementById('edit_address_line2').value || undefined,
        city: document.getElementById('edit_city').value,
        state: document.getElementById('edit_state').value,
        zip: document.getElementById('edit_zip').value,
        country: document.getElementById('edit_country').value || undefined,
        phone: document.getElementById('edit_phone').value || undefined,
        website_url: document.getElementById('edit_website_url').value || undefined,
        retail_url: document.getElementById('edit_retail_url').value || undefined,
        classes_url: document.getElementById('edit_classes_url').value || undefined,
        rentals_url: document.getElementById('edit_rentals_url').value || undefined,
        notes: document.getElementById('edit_notes').value || undefined,
        latitude: parseFloat(document.getElementById('edit_latitude').value) || undefined,
        longitude: parseFloat(document.getElementById('edit_longitude').value) || undefined,
        // Retail glass
        retail_supports_casting: document.getElementById('edit_retail_supports_casting').checked,
        retail_supports_flameworking_hard: document.getElementById('edit_retail_supports_flameworking_hard').checked,
        retail_supports_flameworking_soft: document.getElementById('edit_retail_supports_flameworking_soft').checked,
        retail_supports_fusing: document.getElementById('edit_retail_supports_fusing').checked,
        retail_supports_glass_blowing: document.getElementById('edit_retail_supports_glass_blowing').checked,
        retail_supports_stained_glass: document.getElementById('edit_retail_supports_stained_glass').checked,
        retail_supports_other: document.getElementById('edit_retail_supports_other').checked,
        // Classes
        classes_supports_casting: document.getElementById('edit_classes_supports_casting').checked,
        classes_supports_flameworking_hard: document.getElementById('edit_classes_supports_flameworking_hard').checked,
        classes_supports_flameworking_soft: document.getElementById('edit_classes_supports_flameworking_soft').checked,
        classes_supports_fusing: document.getElementById('edit_classes_supports_fusing').checked,
        classes_supports_glass_blowing: document.getElementById('edit_classes_supports_glass_blowing').checked,
        classes_supports_stained_glass: document.getElementById('edit_classes_supports_stained_glass').checked,
        classes_supports_other: document.getElementById('edit_classes_supports_other').checked,
        // Rentals
        rentals_supports_casting: document.getElementById('edit_rentals_supports_casting').checked,
        rentals_supports_flameworking_hard: document.getElementById('edit_rentals_supports_flameworking_hard').checked,
        rentals_supports_flameworking_soft: document.getElementById('edit_rentals_supports_flameworking_soft').checked,
        rentals_supports_fusing: document.getElementById('edit_rentals_supports_fusing').checked,
        rentals_supports_glass_blowing: document.getElementById('edit_rentals_supports_glass_blowing').checked,
        rentals_supports_stained_glass: document.getElementById('edit_rentals_supports_stained_glass').checked,
        rentals_supports_other: document.getElementById('edit_rentals_supports_other').checked,
      };

      const response = await authenticatedFetch('/api/update-location', {
        method: 'POST',
        body: JSON.stringify({ stable_id: stableId, updates })
      });

      if (response.ok) {
        closeEditModal();
        await loadSubmissions();
      } else {
        const error = await response.json();
        editError.textContent = error.error || 'Failed to update store';
        editError.classList.remove('hidden');
      }
    } catch (error) {
      if (error.message !== 'Unauthorized') {
        editError.textContent = 'Network error. Please try again.';
        editError.classList.remove('hidden');
      }
    } finally {
      saveButton.disabled = false;
      saveButton.textContent = 'Save Changes';
    }
  });

  // Close modal when clicking outside
  editModal?.addEventListener('click', (e) => {
    if (e.target === editModal) {
      closeEditModal();
    }
  });
</script>
