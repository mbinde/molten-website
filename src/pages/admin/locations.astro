---
import Layout from '../../layouts/Layout.astro';

// IMPORTANT: Disable prerendering for admin pages (required for Cloudflare)
export const prerender = false;
---

<Layout title="Locations Approval Queue - Molten Admin">
  <section class="py-16 min-h-screen bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Login Form -->
      <div id="loginGate" class="max-w-md mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h1 class="text-2xl font-bold mb-4">Admin Login</h1>
          <p class="text-gray-600 mb-6">Enter your admin password to access the locations approval queue.</p>

          <form id="loginForm">
            <input
              type="password"
              id="passwordInput"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent mb-4"
              placeholder="Enter password"
              autocomplete="current-password"
              required
            />

            <button
              type="submit"
              id="loginButton"
              class="w-full bg-orange-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-orange-600 transition disabled:opacity-50"
            >
              Login
            </button>
          </form>

          <div id="loginError" class="hidden mt-4 p-3 bg-red-50 border border-red-200 text-red-800 rounded-lg text-sm"></div>
        </div>
      </div>

      <!-- Admin Content (hidden until authenticated) -->
      <div id="adminContent" class="hidden">
        <!-- Header -->
        <div class="mb-8">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h1 class="text-4xl font-bold mb-2">Locations Approval Queue</h1>
              <p class="text-lg text-gray-600">Review and approve location submissions</p>
            </div>
            <div class="flex gap-2">
              <a
                href="/locations.json"
                target="_blank"
                class="bg-gray-500 text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-600 transition text-sm inline-flex items-center gap-2"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                View JSON
              </a>
              <button
                onclick="regenerateJSON()"
                id="regenerateBtn"
                class="bg-blue-500 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-600 transition text-sm"
              >
                üîÑ Regenerate JSON
              </button>
            </div>
          </div>
          <div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <p class="text-sm text-blue-800">
              <strong>‚ú® Auto-Geocoding:</strong> When you approve a location, the system automatically looks up its coordinates using OpenStreetMap (free, no API key needed). The public locations.json file is also regenerated automatically.
            </p>
          </div>
          <div id="regenerateStatus" class="hidden mt-4"></div>
        </div>

        <!-- Stats (clickable to filter) -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div data-filter="pending" class="stat-box bg-white rounded-lg shadow p-6 cursor-pointer hover:shadow-lg transition-all border-2 border-orange-500">
            <div class="text-3xl font-bold text-orange-500" id="pendingCount">0</div>
            <div class="text-gray-600">Pending</div>
          </div>
          <div data-filter="edit-suggestions" class="stat-box bg-white rounded-lg shadow p-6 cursor-pointer hover:shadow-lg transition-all border-2 border-transparent">
            <div class="text-3xl font-bold text-blue-500" id="editSuggestionsCount">0</div>
            <div class="text-gray-600">Edit Suggestions</div>
          </div>
          <div data-filter="approved" class="stat-box bg-white rounded-lg shadow p-6 cursor-pointer hover:shadow-lg transition-all border-2 border-transparent">
            <div class="text-3xl font-bold text-green-500" id="approvedCount">0</div>
            <div class="text-gray-600">Approved</div>
          </div>
          <div data-filter="rejected" class="stat-box bg-white rounded-lg shadow p-6 cursor-pointer hover:shadow-lg transition-all border-2 border-transparent">
            <div class="text-3xl font-bold text-gray-500" id="rejectedCount">0</div>
            <div class="text-gray-600">Rejected</div>
          </div>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="text-center py-12">
          <div class="text-gray-500">Loading submissions...</div>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-12">
          <div class="text-gray-500 text-lg">No submissions found</div>
        </div>

        <!-- Submissions List -->
        <div id="submissionsList" class="space-y-6">
          <!-- Dynamically populated -->
        </div>

      </div>

      <!-- Edit Modal -->
      <div id="editModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-lg shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
