---
import Layout from '../../layouts/Layout.astro';

// IMPORTANT: Disable prerendering for admin pages (required for Cloudflare)
export const prerender = false;
---

<Layout title="KV Migration - Molten Admin">
  <section class="py-16 min-h-screen bg-gray-50">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Login Form -->
      <div id="loginGate" class="max-w-md mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h1 class="text-2xl font-bold mb-4">Admin Login</h1>
          <p class="text-gray-600 mb-6">Enter your admin password to access the migration tool.</p>

          <form id="loginForm">
            <input
              type="password"
              id="passwordInput"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent mb-4"
              placeholder="Enter password"
              autocomplete="current-password"
              required
            />

            <button
              type="submit"
              id="loginButton"
              class="w-full bg-orange-500 text-white py-2 px-4 rounded-lg font-bold hover:bg-orange-600 transition disabled:opacity-50"
            >
              Login
            </button>
          </form>

          <div id="loginError" class="hidden mt-4 p-3 bg-red-50 border border-red-200 text-red-800 rounded-lg text-sm"></div>
        </div>
      </div>

      <!-- Migration Content (hidden until authenticated) -->
      <div id="migrationContent" class="hidden">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h1 class="text-3xl font-bold mb-4">KV Data Migration</h1>

          <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <p class="text-sm text-blue-800">
              <strong>What this does:</strong> This one-time migration copies your data from the old KV keys
              (<code>pending-stores</code>, <code>stores-json</code>) to the new keys
              (<code>pending-locations</code>, <code>locations-json</code>).
            </p>
            <p class="text-sm text-blue-800 mt-2">
              Your original data will remain unchanged. After migration, you can close this page and won't need it again.
            </p>
          </div>

          <button
            id="migrateButton"
            onclick="runMigration()"
            class="w-full bg-green-500 text-white py-3 px-6 rounded-lg font-bold text-lg hover:bg-green-600 transition disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Run Migration
          </button>

          <div id="migrationStatus" class="hidden mt-6"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  let authToken = '';

  // Check for existing auth
  function checkExistingAuth() {
    const stored = sessionStorage.getItem('admin_token');
    if (stored) {
      authToken = stored;
      showMigrationContent();
    }
  }

  // Login form handler
  document.getElementById('loginForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const password = (document.getElementById('passwordInput') as HTMLInputElement).value;
    const loginButton = document.getElementById('loginButton') as HTMLButtonElement;
    const loginError = document.getElementById('loginError') as HTMLDivElement;

    loginButton.disabled = true;
    loginButton.textContent = 'Logging in...';
    loginError.classList.add('hidden');

    try {
      const response = await fetch('/api/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ password })
      });

      const data = await response.json();

      if (response.ok && data.token) {
        authToken = data.token;
        sessionStorage.setItem('admin_token', authToken);
        showMigrationContent();
      } else {
        loginError.textContent = data.error || 'Login failed';
        loginError.classList.remove('hidden');
        loginButton.disabled = false;
        loginButton.textContent = 'Login';
      }
    } catch (error) {
      loginError.textContent = 'Network error. Please try again.';
      loginError.classList.remove('hidden');
      loginButton.disabled = false;
      loginButton.textContent = 'Login';
    }
  });

  function showMigrationContent() {
    document.getElementById('loginGate')?.classList.add('hidden');
    document.getElementById('migrationContent')?.classList.remove('hidden');
  }

  // Run migration
  (window as any).runMigration = async function() {
    const button = document.getElementById('migrateButton') as HTMLButtonElement;
    const status = document.getElementById('migrationStatus') as HTMLDivElement;

    button.disabled = true;
    button.textContent = 'Running Migration...';
    status.classList.remove('hidden');
    status.innerHTML = '<div class="text-gray-600">⏳ Migration in progress...</div>';

    try {
      const response = await fetch('/api/migrate-to-locations', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${authToken}`
        }
      });

      const data = await response.json();

      if (response.ok && data.success) {
        status.innerHTML = `
          <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="font-bold text-green-800 mb-2">✅ Migration Successful!</div>
            ${data.log.map((line: string) => `<div class="text-sm text-green-700">${line}</div>`).join('')}
            <div class="mt-4 text-sm text-green-800">
              <strong>Total locations:</strong> ${data.total_locations}
            </div>
            <div class="mt-4 pt-4 border-t border-green-300">
              <p class="text-sm text-green-700">
                ✨ All done! You can now close this page and visit the
                <a href="/admin/locations" class="underline font-semibold">admin panel</a>.
              </p>
            </div>
          </div>
        `;
        button.textContent = 'Migration Complete';
      } else {
        status.innerHTML = `
          <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
            <div class="font-bold text-red-800 mb-2">❌ Migration Failed</div>
            <div class="text-sm text-red-700">${data.error || 'Unknown error'}</div>
            ${data.details ? `<div class="text-xs text-red-600 mt-2">${data.details}</div>` : ''}
          </div>
        `;
        button.disabled = false;
        button.textContent = 'Try Again';
      }
    } catch (error) {
      status.innerHTML = `
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="font-bold text-red-800 mb-2">❌ Network Error</div>
          <div class="text-sm text-red-700">Failed to connect to the server. Please try again.</div>
        </div>
      `;
      button.disabled = false;
      button.textContent = 'Try Again';
    }
  };

  // Check auth on page load
  checkExistingAuth();
</script>
